@article{reyesBuildingStakeholderledCommon2019,
  title = {Building a Stakeholder-Led Common Vision Increases the Expected Cost-Effectiveness of Biodiversity Conservation},
  author = {Reyes, Rocio Ponce and Firn, Jennifer and Nicol, Sam and Chadès, Iadine and Stratford, Danial S. and Martin, Tara G. and Whitten, Stuart and Carwardine, Josie},
  date = {2019},
  journaltitle = {PLoS ONE},
  volume = {14},
