  author = {Ward, Michelle S. and Simmonds, Jeremy S. and Reside, April E. and Watson, James E. M. and Rhodes, Jonathan R. and Possingham, Hugh P. and Trezise, James and Fletcher, Rachel and File, Lindsey and Taylor, Martin},
  date = {2019-11},
  journaltitle = {Conservation Science and Practice},
  shortjournal = {Conservat Sci and Prac},
