@article{robinsonHowEnsureThreatened2018,
  title = {How to Ensure Threatened Species Monitoring Leads to Threatened Species Conservation},
  author = {Robinson, Natasha M. and Scheele, Ben C. and Legge, Sarah and Southwell, Darren M. and Carter, Oberon and Lintermans, Mark and Radford, James Q. and Skroblin, Anja and Dickman, Chris R. and Koleck, Jessica and Wayne, Adrian F. and Kanowski, John and Gillespie, Graeme R. and Lindenmayer, David B.},
