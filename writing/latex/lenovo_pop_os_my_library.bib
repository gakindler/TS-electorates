@article{cattarinoInformationUncertaintyInfluences2018,
  title = {Information Uncertainty Influences Conservation Outcomes When Prioritizing Multi-Action Management Efforts},
  author = {Cattarino, Lorenzo and Hermoso, Virgilio and Carwardine, Josie and Adams, Vanessa M. and Kennard, Mark J. and Linke, Simon},
  date = {2018},
