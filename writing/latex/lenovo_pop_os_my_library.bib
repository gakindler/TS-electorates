  title = {Quantifying Extinction Risk and Forecasting the Number of Impending {{Australian}} Bird and Mammal Extinctions},
  author = {Geyle, Hayley M. and Woinarski, John C.Z. and Baker, G. Barry and Dickman, Chris R. and Dutson, Guy and Fisher, Diana O. and Ford, Hugh and Holdsworth, Mark and Jones, Menna E. and Kutt, Alex and Legge, Sarah and Leiper, Ian and Loyn, Richard and Murphy, Brett P. and Menkhorst, Peter and Reside, April E. and Ritchie, Euan G. and Roberts, Finley E. and Tingley, Reid and Garnett, Stephen T.},
  date = {2018},
